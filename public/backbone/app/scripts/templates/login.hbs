<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1>★ ToDo App ★</h1>
      <div class="panel panel-default">
        <div class="panel-heading">Please login:</div>
        <div class="panel-body">
          <form id="login-form">
            <div class="form-group">
              <label for="email">Email:</label>
              <input type="email" class="form-control" name="email" placeholder="Enter email (rocky@example.com)">
            </div>
            <div class="form-group">
              <label for="password">Password:</label>
              <input type="password" class="form-control" name="password" placeholder="Enter password (12345678)">
            </div>
            <button type="submit" class="btn btn-success">Login</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>